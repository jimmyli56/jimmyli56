# four function calculator with tkinter
from tkinter import *

class Calculator(Frame):
    def __init__(self, master):
        Frame.__init__(self, master)
        self.grid()
        self.create_widgets()

    def create_widgets(self):
        self.display = Entry(self, width=35, bg="white")
        self.display.grid(row=0, column=0, columnspan=4)

        self.button1 = Button(self, text="1", command=self.one)
        self.button1.grid(row=1, column=0)

        self.button2 = Button(self, text="2", command=self.two)
        self.button2.grid(row=1, column=1)

        self.button3 = Button(self, text="3", command=self.three)
        self.button3.grid(row=1, column=2)

        self.button4 = Button(self, text="4", command=self.four)
        self.button4.grid(row=2, column=0)

        self.button5 = Button(self, text="5", command=self.five)
        self.button5.grid(row=2, column=1)

        self.button6 = Button(self, text="6", command=self.six)
        self.button6.grid(row=2, column=2)

        self.button7 = Button(self, text="7", command=self.seven)
        self.button7.grid(row=3, column=0)

        self.button8 = Button(self, text="8", command=self.eight)
        self.button8.grid(row=3, column=1)

        self.button9 = Button(self, text="9", command=self.nine)
        self.button9.grid(row=3, column=2)

        self.button0 = Button(self, text="0", command=self.zero)
        self.button0.grid(row=4, column=1)

        self.button_plus = Button(self, text="+", command=self.plus)
        self.button_plus.grid(row=1, column=3)

        self.button_minus = Button(self, text="-", command=self.minus)
        self.button_minus.grid(row=2, column=3)

        self.button_multiply = Button(self, text="*", command=self.multiply)
        self.button_multiply.grid(row=3, column=3)

        self.button_divide = Button(self, text="/", command=self.divide)
        self.button_divide.grid(row=4, column=3)

        self.button_equal = Button(self, text="=", command=self.equal)
        self.button_equal.grid(row=4, column=2)

        self.button_clear = Button(self, text="C", command=self.clear)
        self.button_clear.grid(row=4, column=0)

    def one(self):
        self.display.insert(END, "1")

    def two(self):
        self.display.insert(END, "2")

    def three(self):
        self.display.insert(END, "3")

    def four(self):
        self.display.insert(END, "4")

    def five(self):
        self.display.insert(END, "5")

    def six(self):
        self.display.insert(END, "6")

    def seven(self):
        self.display.insert(END, "7")

    def eight(self):
        self.display.insert(END, "8")

    def nine(self):
        self.display.insert(END, "9")

    def zero(self):
        self.display.insert(END, "0")

    def plus(self):
        self.display.insert(END, "+")
        
    def minus(self):
        self.display.insert(END, "-")
    
    def multiply(self):
        self.display.insert(END, "*")

    def divide(self):
        self.display.insert(END, "/")
    
    def equal(self):
        var = eval(self.display.get())
        self.display.delete(0,END)
        self.display.insert(END, var)
        
    
    def clear(self):
        self.display.delete(0, END)

root = Tk()
root.title("Calculator")
root.geometry("320x170")
app = Calculator(root)
root.mainloop()
